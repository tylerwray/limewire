<div class="grid gap-4 p-4">
  <% @artists.each do |artist| %>
    <div class="grid grid-cols-[auto_1fr] gap-2">
      <img src="<%= artist.images.first['url'] %>" class="h-20 w-20 rounded-lg shadow" />
      <div>
        <div class="text-lg font-medium pb-1"><%= artist.name %></div>
        <div class="text-sm text-gray-600"><%= artist.name %></div>
      </div>
    </div>
  <% end %>
</div>

<%= render partial: 'shared/cursor_pagination', locals: { pagination: @pagination } %>
