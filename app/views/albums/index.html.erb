<div class="grid gap-4 p-4">
  <% @albums.each do |album| %>
    <div class="grid grid-cols-[auto_1fr] gap-2">
      <img src="<%= album.images.first['url'] %>" class="h-20 w-20 rounded-lg shadow" />
      <div>
        <div class="text-lg font-medium pb-1"><%= album.name %></div>
        <div class="text-sm text-gray-600"><%= album.artists.first.name %></div>
      </div>
    </div>
  <% end %>
</div>

<%= render partial: 'shared/pagination', locals: { pagination: @pagination } %>
