<div class="grid gap-4 p-4">
  <% @playlists.each do |playlist| %>
    <div class="grid grid-cols-[auto_1fr] gap-2">
      <img src="<%= playlist.images.first["url"] %>" class="h-20 w-20 rounded-lg shadow">
      <div>
        <div class="text-lg font-medium pb-1"><%= playlist.name %></div>
        <div class="text-sm text-gray-600"><%= playlist.description %></div>
      </div>
    </div>
  <% end %>
</div>

<%= render partial: "shared/pagination", locals: { pagination: @pagination } %>
